<UserControl x:Class="Viewers.UserControls.PDFViewThumbs"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:ctrl="clr-namespace:GestureControls.Controls;assembly=GestureControls"
             mc:Ignorable="d"
             d:DesignHeight="176" d:DesignWidth="152" Background="Transparent">
    <Canvas>
        <Image Name="Imagen" Height="176" Width="152" Opacity=".8" Source="ButtonPictures/AdobeReader.png"/>
        <TextBlock Name="Nombre" Height="115" Width="135" Opacity=".8" Background="Transparent" Foreground="Black"
                   TextAlignment="Center"  TextWrapping="Wrap" FontSize="28" FontWeight="ExtraBold"
                   FontFamily="Century Gothic"/>
        <ctrl:HoverButton Name="Boton" Height="176" Width="152" Opacity="0"
                          KinectCursorEnter="MakeVisible" KinectCursorLeave="MakeInvisible"/>
    </Canvas>
</UserControl>
